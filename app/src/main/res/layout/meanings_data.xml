<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="10dp"
        app:cardPreventCornerOverlap="false"
        android:id="@+id/card_layout"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:visibility="visible"
                android:id="@+id/meanings_layout"

                >



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/part_title"
                            android:text="Part of speech :"
                            android:background="@color/navy_blue"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text=""
                            android:textSize="15sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/part_value"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:textSize="15sp"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/def_title"
                            android:text="Definitions :"
                            android:textColor="@color/white"
                            android:background="@color/navy_blue"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:textColor="@color/black"
                            android:text=""
                            android:textSize="15sp"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/def_val"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/Syn_text"
                            android:text="Synonyms :"
                            android:background="@color/navy_blue"

                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text=""
                            android:maxLines="2"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/syn_val"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:paddingRight="8dp">

                        <TextView
                            android:layout_width="140dp"
                            android:layout_height="40dp"
                            android:padding="10dp"
                            android:paddingBottom="15dp"
                            android:paddingTop="15dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/anto_text"
                            android:text="Antonyms :"
                            android:background="@color/navy_blue"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text=""
                            android:maxLines="2"
                            android:textSize="10sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/segoe_ui"
                            android:id="@+id/anto_val"
                            />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/seperator_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="20dp"
        android:background="@color/bg_color"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/card_layout"
        android:layout_marginBottom="8dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>